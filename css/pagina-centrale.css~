@charset "utf-8";


/* ====== FORMATTAZIONE ELENCO NAVIGAZIONE ========= */ 
.nav, .nav ul { /*formatta la parte generale dei due menù*/
/*background-image: url('../img/Sfondo-scuro.jpg'); */
background-color: rgb(249, 242, 226);
list-style: none; /*toglie i punti dal menù*/
margin: 0;
padding: 0; /*inizializza margini e padding*/
}

.nav { /* formatta nello specifico la barra più alta del menù */
min-height: 1em; /*abbassa leggermente la barra dall'altezza del testo */
overflow: auto; /*-nell'originale*/
padding: 10px 10px 10px 16px; /* sposta il testo */
border-radius: 6px 6px 0 0; /*arrotonda margini alto e destro*/
background-clip: padding-box; /*-nell'originale */
}

.nav a { /*formatta le scritte del menù iniziale*/
color: navy; /*colore blu delle scritte*/
display: block; /*-nell'originale*/
}
.nav li { /*formatta le voci del menù primario*/
	float: left;  /* sposta le voci del menù principale a sinistra e diventano flottanti per allinearle */				
	width: 8em; /* distanzia le parole del menù tra loro */
}
.nav li a:hover { /*formatta al passaggio del mouse sopra*/
	color: #aabadd; /* cambia colore delle voci del menù la passaggio */
}
/*-- Navigazione sottomenù --*/
.nav ul { /*formatta il sottomenù*/
margin-left: -10px; /*allinea al menù principale il sottomenù*/
padding: 10px 10px 10px; /*definisce 10px da sopra, destra e sotto, non serve sinistra perché già fatto*/
border-radius: 0px 0px 8px 8px; /*definisce l'arrotondamento degli angoli*/
background-clip: padding-box; /*sembra non influire*/
}

.nav li ul { /*formatta il sottomenù di navigazione */
left: -9999em; /*sposta il sottomenù in una zona non vista */
position: absolute; /*posiziona il sottomenù in una posizione specifica che non tiene conto del resto */
z-index: 1000; /*posiziona il sottomenù al di sopra di qualsiasi altra cosa*/;
}
.nav li:hover ul { /*formatta l'elenco quando il mouse passa sopra il menù principale*/
padding: 10px 10px 10px; /*definisce 10px da sopra, destra e sotto, non serve sinistra perché già fatto*/
left: auto; /*sposta il sottomenù nella parte adatta */
width: 7em; /*visualizza la larghezza del sottomenù */
}
.nav ul li {/*formatta i nomi dell'elenco del sottomenù*/
float: none;
margin-top: 2px;
width: auto;
}
